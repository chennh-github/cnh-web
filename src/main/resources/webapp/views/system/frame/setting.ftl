<div id="demo-settings">
    <a id="demo-settings-toggler" href="#" class="r-pad-5">
        <i class="fa fa-cogs"></i>
    </a>
    <h5 class="header">
        设置
    </h5>
    <div id="demo-config">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8">
                    固定菜单栏
                </div>
                <div class="col-md-2">
                    <div class="switch">
                        <input id="onoff-fixed-sidebar"
                               type="checkbox"
                               name="switch"
                               class="switch-checkbox">
                        <label class="switch-label sidebar-fixed"
                               for="onoff-fixed-sidebar">
                            <span class="switch-inner"></span>
                            <span class="switch-switcher"></span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8">
                    固定底部
                </div>
                <div class="col-md-2">
                    <div class="switch">
                        <input id="onoff-footer-fixer"
                               type="checkbox"
                               name="switch"
                               class="switch-checkbox">
                        <label class="switch-label container-footer-fixer"
                               for="onoff-footer-fixer">
                            <span class="switch-inner"></span>
                            <span class="switch-switcher"></span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8">
                    固定顶部导航
                </div>
                <div class="col-md-2">
                    <div class="switch">
                        <input id="onoff-navbar-fixer"
                               type="checkbox"
                               name="switch"
                               class="switch-checkbox">
                        <label class="switch-label container-navbar-fixer"
                               for="onoff-navbar-fixer">
                            <span class="switch-inner"></span>
                            <span class="switch-switcher"></span>
                        </label>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8">
                    收起菜单栏
                </div>
                <div class="col-md-2">
                    <div class="switch">
                        <input id="onoff-collapse-sidebar"
                               type="checkbox"
                               name="switch"
                               class="switch-checkbox">
                        <label class="switch-label sidebar-collapser"
                               for="onoff-collapse-sidebar">
                            <span class="switch-inner"></span>
                            <span class="switch-switcher"></span>
                        </label>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8">
                    盒模型
                </div>
                <div class="col-md-2">
                    <div class="switch">
                        <input id="onoff-boxed"
                               type="checkbox"
                               name="switch"
                               class="switch-checkbox">
                        <label class="switch-label boxed-selector"
                               for="onoff-boxed">
                            <span class="switch-inner"></span>
                            <span class="switch-switcher"></span>
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <h5 class="header">
        背景颜色
    </h5>
    <div id="demo-background">
        <div class="background-selector background-selector-default" background="default">
            <div class="background-selector-label">默认</div>
        </div>
        <div class="background-selector background-selector-dark" background="dark">
            <div class="background-selector-label">暗色</div>
        </div>
        <div class="background-selector background-selector-light" background="light">
            <div class="background-selector-label">亮色</div>
        </div>
    </div>
    <h5 class="header">
        主题
    </h5>
    <div id="demo-themes">
        <div class="theme-selector theme-default-background" theme="default">
            <div class="theme-selector-label">默认</div>
        </div>
        <div class="theme-selector theme-white-background" theme="white">
            <div class="theme-selector-label">日光白</div>
        </div>
        <div class="theme-selector theme-navy-background" theme="navy">
            <div class="theme-selector-label">海军蓝</div>
        </div>
        <div class="theme-selector theme-sky-background" theme="sky">
            <div class="theme-selector-label">天空蓝</div>
        </div>
        <div class="theme-selector theme-lime-background" theme="lime">
            <div class="theme-selector-label">柠檬青</div>
        </div>
        <div class="theme-selector theme-dust-background" theme="dust">
            <div class="theme-selector-label">星辰灰</div>
        </div>
        <div class="theme-selector theme-green-background" theme="green">
            <div class="theme-selector-label">抹茶绿</div>
        </div>
        <div class="theme-selector theme-orange-background" theme="orange">
            <div class="theme-selector-label">橘园橙</div>
        </div>
        <div class="theme-selector theme-yellow-background" theme="yellow">
            <div class="theme-selector-label">耀金黄</div>
        </div>
        <div class="theme-selector theme-purple-background" theme="purple">
            <div class="theme-selector-label">罗兰紫</div>
        </div>
        <div class="theme-selector theme-chocolate-background" theme="chocolate">
            <div class="theme-selector-label">巧克力棕</div>
        </div>
        <div class="theme-selector theme-dark-background" theme="dark">
            <div class="theme-selector-label">暗夜黑</div>
        </div>
        <div class="theme-selector theme-green-soft-background" theme="green-soft">
            <div class="theme-selector-label">轻柔绿</div>
        </div>
        <div class="theme-selector theme-red-background" theme="red">
            <div class="theme-selector-label">天轮红</div>
        </div>
    </div>
</div>